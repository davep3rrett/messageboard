extends layout

block content

  h1= title

  each topic in context.topics
    - var url='/topic/' + topic._id
    a(href=url): h2= topic.title
    h3= topic.dateCreated
    h3= topic.username

    each post in topic.posts
      p= post.body
      p= post.date
      p= post.username

  a(href='/new-topic') new topic