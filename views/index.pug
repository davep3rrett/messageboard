extends layout

block content

  div(class='title')
    h1= title

  div(class='wrap')
    each topic in topics
      - var url='/topic?id=' + topic._id
      a(href=url): div(class='topic')        
        h4= topic.title
        p= topic.dateCreated
        if topic.username
          p created by: #{topic.username}

  div(class='button-container')
    div(class='button')
      a(href='/new-topic') new topic
