extends layout

block content
  form(class='new-topic' id='new-topic' role='form' action='/new-topic' method='POST')
    input(type='text' id='title' name="title")
    label(for='title') topic title
    input(type='text' id='username' name='username')
    label(for='username') username
    button(type='submit') submit
  label(for='body') post body
  textarea(name='body' form='new-topic' id='body')